@{
    ViewBag.Title = "Home Page";
}

@Html.Partial("_HomeSlider")

@Html.Partial("_HomeMainInfo")

@Html.Partial("_HomeServices")

@Html.Partial("_HomeRecentWorks")

@Html.Partial("_HomeClients")

@Html.Partial("_HomeBottom")


@section scripts
{
    <script type="text/javascript">
        $(function () {
            var Page = (function () {
                var $navArrows = $('#nav-arrows'),
                    slitslider = $('#slider').slitslider({
                        autoplay: true
                    }),
                    init = function () {
                        initEvents();
                    },
                    initEvents = function () {
                        $navArrows.children(':last').on('click', function () {
                            slitslider.next();
                            return false;
                        });
                        $navArrows.children(':first').on('click', function () {
                            slitslider.previous();
                            return false;
                        });
                    };
                return { init: init };
            })();

            Page.init();
        });
    </script>
}